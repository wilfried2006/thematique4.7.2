<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lamy.Theme.Web</title>
    <link rel="stylesheet" href="https://kit.fontawesome.com/2f7869450a.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Styles/site.min.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/Scripts/site.min.js" asp-append-version="true"></script>

    @RenderSection("HeaderScripts", required: false)

</head>
<body>
   
    @Html.Partial("_Header")
    @Html.Partial("_Menu")

    <div>
        <div class="breadcrumb">@Html.MvcSiteMap().SiteMapPath()</div>  

        @RenderBody()
    </div>

    @Html.Partial("_Footer")
    @RenderSection("Scripts", required: false)
</body>
</html>
